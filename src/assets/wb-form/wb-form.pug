mixin wb-form ( formInfoObject )
  - var inputClass = ''
  form.wb-form(action="")
    each inputField in formInfoObject
      - inputClass = `wb-info-form__input`
      - 
        if ( inputField.inputType == 'button' || inputField.inputType == 'submit' ) inputClass = `wb-info-form__button`
      .wb-info-form__row-wrapper
        if inputField.textBefore
          span.wb-info-form__text-before-input= inputField.textBefore
        input(type=inputField.inputType class=inputClass value=inputField.valueInput)